{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FullStack(SAFE)",
      "type": "node-terminal",
      "request": "launch",
      "command": "vercel dev --listen 3000",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "SSL",
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)"
      },
      "cascadeTerminateToConfigurations": ["SSL"]
    },
    {
      "name": "FullStack(UNSAFE)",
      "type": "node-terminal",
      "request": "launch",
      "command": "vercel dev",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "started server on .+, url: (https?://.+)"
      }
    },
    {
      "name": "SSL",
      "type": "node-terminal",
      "request": "launch",
      "command": "local-ssl-proxy --source 3001 --target 3000",
      "serverReadyAction": {
        "pattern": "Started proxy",
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "uriFormat": "https://localhost:3001"
      },
      "cascadeTerminateToConfigurations": [
        "FullStack(SAFE)",
        "FullStack(UNSAFE)"
      ]
    }
  ]
}
